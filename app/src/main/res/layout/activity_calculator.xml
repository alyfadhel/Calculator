<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Calculator">


    <TextView
        android:id="@+id/result_Tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        android:hint="0.0"
        android:textColorHint="@color/white"
        android:textSize="50sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@id/result_Tv"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="7"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="8"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="9"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_operator"
            android:onClick="onClickOperator"
            android:text="+"
            android:textSize="45sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@id/first_row"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="4"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="5"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="6"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_operator"
            android:onClick="onClickOperator"
            android:text="-"
            android:textSize="45sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@id/second_row"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="1"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="2"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="3"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_operator"
            android:onClick="onClickOperator"
            android:text="*"
            android:textSize="45sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourth_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@id/third_row"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="."
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onClickDigit"
            android:text="0"
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_digit"
            android:onClick="onEqual"
            android:text="="
            android:textSize="45sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_operator"
            android:onClick="onClickOperator"
            android:text="/"
            android:textSize="45sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>